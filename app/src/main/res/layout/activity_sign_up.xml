<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentification.Sign_up">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />
    <Button
        android:id="@+id/SignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_button"
        android:fontFamily="@font/bold"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/SignUp"
        app:layout_constraintTop_toBottomOf="@+id/Adress"
        tools:layout_editor_absoluteX="20dp"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/empty_button"
        android:fontFamily="@font/bold"
        android:text="You already have an account ?"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignIn"
        tools:layout_editor_absoluteX="20dp" />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/normal"
        android:hint="Your name is ..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout_editor_absoluteX="20dp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/normal"
        android:hint="Your email is ..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/name"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/normal"
        android:hint="Your password is ..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:layout_editor_absoluteX="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/normal"
        android:hint="Confirm your password ..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/Adress"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:layout_editor_absoluteX="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/Adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/normal"
        android:hint="Confirm your password ..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/SignIn"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        tools:layout_editor_absoluteX="20dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/bold"
        android:text="Be one of us,"
        android:textColor="#fff"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/normal"
        android:text="Create your account to start filling your needs with wonderful products."
        android:textColor="#AEFFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

</androidx.constraintlayout.widget.ConstraintLayout>