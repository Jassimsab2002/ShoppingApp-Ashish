<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.Profile_Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rashid Sabri"
        android:fontFamily="@font/bold"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:id="@+id/Name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Adresse :"
        android:fontFamily="@font/bold"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:id="@+id/adress"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="87 falah
,niougra
,maroc"
        android:fontFamily="@font/normal"
        android:textColor="#57000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="21dp"
        android:id="@+id/adresse"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/adress"
        app:layout_constraintBottom_toBottomOf="@id/adress"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/Name"
        app:layout_constraintBottom_toBottomOf="@id/Name"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adresse"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Infos"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell on flipkart"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share app"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Care"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:fontFamily="@font/bold"
            android:textColor="#34000000"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>