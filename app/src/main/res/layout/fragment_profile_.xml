<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.Profile_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rachid Sabri"
        android:textSize="25dp"
        android:textColor="#000"
        android:fontFamily="@font/bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/textview_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jassemsabri@gmail.com"
        android:textSize="20dp"
        android:textColor="#23000000"
        android:fontFamily="@font/bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textview_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_email"
        android:background="#fff"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_user"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="35dp"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            />

        <ImageView
            android:id="@+id/imageview_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_icon" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow"
            app:layout_constraintTop_toTopOf="@id/imageview_icon"
            app:layout_constraintBottom_toTopOf="@id/textview_subtitle"
            android:text="My Profile"
            android:textColor="#000"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/textview_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow"
            app:layout_constraintTop_toBottomOf="@id/textview_title"
            app:layout_constraintBottom_toBottomOf="@id/imageview_icon"
            android:text="Change my profile details."
            android:textColor="#32000000"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_profile"
        android:background="#fff"
        android:id="@+id/con_settings"
        >

        <ImageView
            android:id="@+id/imageview_icon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_settings"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="35dp"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            />

        <ImageView
            android:id="@+id/imageview_arrow2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_icon2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_icon2" />

        <TextView
            android:id="@+id/textview_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon2"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow2"
            app:layout_constraintTop_toTopOf="@id/imageview_icon2"
            app:layout_constraintBottom_toTopOf="@id/textview_subtitle2"
            android:text="Settings"
            android:textColor="#000"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/textview_subtitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon2"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow2"
            app:layout_constraintTop_toBottomOf="@id/textview_title2"
            app:layout_constraintBottom_toBottomOf="@id/imageview_icon2"
            android:text="Password &amp; security"
            android:textColor="#32000000"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_settings"
        android:background="#fff"
        android:id="@+id/con_orders"
        >

        <ImageView
            android:id="@+id/imageview_icon1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_check_24"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="35dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imageview_arrow1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_icon1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_icon1" />

        <TextView
            android:id="@+id/textview_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon1"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow1"
            app:layout_constraintTop_toTopOf="@id/imageview_icon1"
            app:layout_constraintBottom_toTopOf="@id/textview_subtitle1"
            android:text="My Orders"
            android:textColor="#000"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/textview_subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon1"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow1"
            app:layout_constraintTop_toBottomOf="@id/textview_title1"
            app:layout_constraintBottom_toBottomOf="@id/imageview_icon1"
            android:text="Check the orders you had."
            android:textColor="#32000000"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_orders"
        android:background="#fff"
        android:id="@+id/con_sell_on_this_app"
        >

        <ImageView
            android:id="@+id/imageview_icon3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="35dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imageview_arrow3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_icon3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_icon3" />

        <TextView
            android:id="@+id/textview_title3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon3"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow3"
            app:layout_constraintTop_toTopOf="@id/imageview_icon3"
            app:layout_constraintBottom_toTopOf="@id/textview_subtitle3"
            android:text="Sell on this app"
            android:textColor="#000"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/textview_subtitle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon3"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow3"
            app:layout_constraintTop_toBottomOf="@id/textview_title3"
            app:layout_constraintBottom_toBottomOf="@id/imageview_icon3"
            android:text="Sign up in the vendor app and sell."
            android:textColor="#32000000"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_sell_on_this_app"
        android:background="#fff"
        android:id="@+id/con_log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        >

        <ImageView
            android:id="@+id/imageview_icon4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="35dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imageview_arrow4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_icon4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_icon4" />

        <TextView
            android:id="@+id/textview_title4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon4"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow4"
            app:layout_constraintTop_toTopOf="@id/imageview_icon4"
            app:layout_constraintBottom_toTopOf="@id/textview_subtitle4"
            android:text="Log out"
            android:textColor="#000"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/textview_subtitle4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageview_icon4"
            app:layout_constraintRight_toLeftOf="@id/imageview_arrow4"
            app:layout_constraintTop_toBottomOf="@id/textview_title4"
            app:layout_constraintBottom_toBottomOf="@id/imageview_icon4"
            android:text="Go out from this account."
            android:textColor="#32000000"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>