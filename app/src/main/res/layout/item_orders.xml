<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/image"
        android:background="#289F9F9F"
        android:padding="30dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ksdfjkbskdjfbks"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="@id/image"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/bold"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="@id/image"
        android:id="@+id/title"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:fontFamily="@font/bold"
        android:textColor="#52000000"
        android:layout_marginTop="10dp"
        android:text="sd;fnsln"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="@id/title"
        android:fontFamily="@font/bold"
        android:textColor="#52000000"
        android:layout_marginTop="10dp"
        android:id="@+id/num_unit"
        android:text="lksndfkjs"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:fontFamily="@font/bold"
        android:textColor="#52000000"
        android:layout_marginTop="10dp"
        android:text="lknsdflknslfnslnflsknflkn"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:fontFamily="@font/bold"
        android:textColor="#52000000"
        android:layout_marginTop="10dp"
        android:text="lknsdflknslfnslnflsknflkn"
        />

    <TextView
        android:id="@+id/Adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:fontFamily="@font/bold"
        android:textColor="#52000000"
        android:layout_marginTop="10dp"
        android:text="lknsdflknslfnslnflsknflkn"
        />

    <Button
        android:id="@+id/confirm_receive"
        android:text="Confirm Order Receive"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/Adress"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_receive"
        android:layout_marginTop="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>